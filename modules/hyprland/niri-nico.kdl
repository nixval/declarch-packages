// Niri + Nico's Hyprland Configuration
// Contributor: @niri-nico
// Category: hyprland
//
// A complete Hyprland setup with Waybar, Rofi, and custom theming.
// Optimized for Arch Linux with Soar fallback for cross-distro compatibility.
//
// Usage:
//   declarch init hyprland/niri-nico

// ============================================================================
// AUR Packages (Arch Linux Only)
// ============================================================================
aur-packages {
    // === Hyprland Core ===
    hyprland
    hyprlock
    hypridle
    xdg-desktop-portal-hyprland

    // === Bar & Launcher ===
    waybar
    rofi-wayland
    nwg-docker-hyprland

    // === Essential Tools ===
    dunst
    kitty
    thunar
    thunar-archive-plugin
    thunar-media-tags-plugin

    // === Theming ===
    nwg-look
    qt5-wayland
    qt6-wayland
    kde-gtk-config

    // === Screenshots & Recording ===
    grim
    slurp
    swappy
    wf-recorder
    wl-clipboard

    // === Wallpapers ===
    swww
    waypaper
    hyprpaper

    // === System Tools ===
    polkit-kde-agent
    wlogout
}

// ============================================================================
// Soar Packages (Cross-Distro)
// ============================================================================
packages {
    // === Modern CLI Replacements ===
    bat
    exa
    fd
    ripgrep
    fzf
    zoxide
    delta
    duf
    procs
    gping

    // === Development Tools ===
    git-delta
    lazygit
    gh
    nodejs-lts
    python3

    // === System Monitoring ===
    btop
    htop
    iotop
    iftop

    // === Network Tools ===
    curl
    wget
    netcat
    openssh
}

// ============================================================================
// Flatpak Packages (Cross-Distro)
// ============================================================================
flatpak-packages {
    // === Browsers ===
    org.mozilla.firefox
    com.google.Chrome

    // === Communication ===
    com.spotify.Client
    org.telegram.desktop
    com.discordapp.Discord

    // === Utilities ===
    com.github.tchx84.Flatseal
    org.gnome.Clock
    org.gnome.Calculator
    org.gnome.Connections
}

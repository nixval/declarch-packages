// Steam Gaming Setup
// Contributor: @gamer123
// Category: gaming
//
// Complete gaming setup with Steam, Lutris, and various launchers.
// Includes performance tools like MangoHud and Gamescope.
//
// Usage:
//   declarch init gaming/steam-setup

// ============================================================================
// AUR Packages (Arch Linux Only)
// ============================================================================
aur-packages {
    // === Launchers ===
    steam
    heroic-games-launcher-bin
    lutris
    bottles
    prismlauncher
    minelauncher

    // === Performance Tools ===
    mangohud
    gamescope
    goverlay
    gamemode

    // === Tools ===
    openrazer-daemon
    polychromatic
}

// ============================================================================
// Soar Packages (Cross-Distro)
// ============================================================================
packages {
    btop
    htop
    glances
    iotop
    iftop
}

// ============================================================================
// Flatpak Packages (Cross-Distro)
// ============================================================================
flatpak-packages {
    com.valvesoftware.Steam
    com.heroicgameslauncher.hgl
    net.lutris.Lutris
    com.usebottles.bottles
    com.discordapp.Discord
}

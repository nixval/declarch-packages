// Rust Development Toolchain
// Contributor: @rustacean
// Category: dev
//
// Complete Rust development environment with editors, tools, and databases.
// Ready for Rust backend, frontend, and systems programming.
//
// Usage:
//   declarch init dev/rust-toolchain

// ============================================================================
// AUR Packages (Arch Linux Only)
// ============================================================================
aur-packages {
    // === Rust Toolchain ===
    rustup
    rust-analyzer

    // === Cargo Tools ===
    cargo-binstall
    cargo-watch
    cargo-edit
    cargo-audit
    cargo-outdated
    cargo-nextest
    sqlx-cli

    // === Analysis Tools ===
    tokei
    hyperfine
    bandwhich
    procs

    // === Formatters ===
    taplo-cli
    stylua
}

// ============================================================================
// Soar Packages (Cross-Distro)
// ============================================================================
packages {
    // === Build Tools ===
    gcc
    cmake
    make
    pkg-config
    ninja
    meson

    // === Version Control ===
    git
    git-lfs
    gh

    // === Containers ===
    docker
    docker-compose
    podman
}

// ============================================================================
// Flatpak Packages (Cross-Distro)
// ============================================================================
flatpak-packages {
    org.rustide.RustRover
    com.visualstudio.code
    org.gnome.Builder
    io.dbeaver.DBeaverCommunity
}
